{
    "name": "adaptdk/gsv-pim-api-sdk",
    "description": "Package to make it easy to interact with the pim-api, includes api endpoints build on top of Laravel's PendingRequest and a webhook",
    "keywords": [
        "TheLifeOfo",
        "gsv-pim-api-sdk"
    ],
    "homepage": "https://github.com/adaptdk/gsv-pim-api-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Amir Khan",
            "email": "amir@adaptagency.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "juststeveking/laravel-transporter": "^0.9.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Adapt\\PimApi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Adapt\\PimApi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Adapt\\PimApi\\PimApiServiceProvider"
            ],
            "aliases": {
                "PimApiProvider": "Adaptdk\\PimApi\\Facades\\PimApiProvider"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
